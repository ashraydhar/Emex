<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".SplashActivity">

    <ImageView
        android:id="@+id/splash_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/splash_background_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_2"
        android:scaleType="centerCrop"
        android:gravity="center"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp" />

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/splash_logo">
        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/icon_email"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
        <EditText
            android:id="@+id/editText"
            android:layout_width="292.5dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:maxLines="1"
            android:hint="Email Address"
            android:layout_marginLeft="33.8dp"
            android:layout_marginRight="33.8dp"
            android:textColorHint="#777"
            android:inputType="textEmailAddress"
            android:textColor="#348cdf"
            android:layout_marginStart="0dp"
            android:visibility="invisible"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/linear1">
        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/icon_password"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            />
        <EditText
            android:id="@+id/editText2"
            android:layout_width="292.5dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="Password"
            android:textColorHint="#777"
            android:layout_marginLeft="33.8dp"
            android:layout_marginRight="33.8dp"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_marginStart="0dp"
            android:textColor="#348cdf"
            android:visibility="invisible"
            />
    </LinearLayout>
    
    <Button
        android:id="@+id/btn1"
        android:layout_width="292.5dp"
        android:layout_height="45dp"
        android:layout_below="@+id/linear2"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="48dp"
        android:background="@drawable/download"
        android:text="Login"
        android:textColor="#fff"
        android:textSize="16sp"
        android:onClick="valid"
        android:visibility="invisible"
        />

    <TextView
        android:layout_below="@id/btn1"
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="forgot Password ?"
        android:clickable="true"
        android:textColor="#0000ff"
        android:layout_marginStart="225dp"
        android:visibility="invisible"
        />
<TextView
    android:id="@+id/last"
    android:layout_below="@id/forgotPassword"
    android:layout_alignParentBottom="true"
    android:gravity="bottom"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Dont have an Account ?"
    android:layout_marginLeft="90dp"
    android:textColor="#0000ff"
    android:visibility="invisible"

    />
    <TextView
        android:id="@+id/last2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/last"
        android:text="   Sign up"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:clickable="true"
        android:visibility="invisible"
        />
</RelativeLayout>
